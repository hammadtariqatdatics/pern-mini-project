[
  {
    "group": "admin",
    "permissions": [
      {
        "resource": "/posts/*",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "action": "allow"
      },
      {
        "resource": "/users/*",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "action": "allow"
      }
    ]
  },
  {
    "group": "user",
    "permissions": [
      {
        "resource": "/users/:id",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "/posts/:id",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "/users/:id",
        "methods": ["PUT"],
        "action": "allow"
      },
      {
        "resource": "/posts/:id",
        "methods": ["PUT"],
        "action": "allow"
      },
      {
        "resource": "/users/register",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "/users/login",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "/users/verify-otp",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "/users/resend-otp",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "/posts/create",
        "methods": ["POST"],
        "action": "allow"
      }
    ]
  }
]
